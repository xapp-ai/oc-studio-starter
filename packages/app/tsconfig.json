{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/__test__/*"]
}
